@model DepartmentViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-6 table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Department Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Departments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentName)
                        </td>
                        <td>
                            <button class="btn btn-outline-primary" onclick="ListToForm('@item.RoleId',@item.Did,'@item.DepartmentName')">Edit</button> |
                            <a class="btn btn-outline-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Did" asp->Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <form asp-action="Add">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input hidden id="Did" asp-for="@Model.Department.Did" class="form-control" />
                <input hidden id="RoleId" asp-for="@Model.Department.RoleId" class="form-control" />
                <label asp-for="@Model.Department.DepartmentName" class="control-label"></label>
                <input type="text" id="DepartmentName" asp-for="@Model.Department.DepartmentName" class="form-control" required />
                <span asp-validation-for="@Model.Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button type="reset" value="Reset" class="btn btn-success" asp-controller="Department" asp-action="Reset">Reset</button>
            </div>
        </form>

    </div>
</div>
