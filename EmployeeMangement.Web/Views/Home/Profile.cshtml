@model EmployeeManagement.Web.Models.Employee
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Edit";
}

<h1>Your Profile</h1>

<h4><button value="Edit" onclick="Enabled()" class="btn btn-primary">Edit</button></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="Enable">
            <input type="hidden" asp-for="Eid" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="Did" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required disabled />
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" required disabled  />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" required disabled  />
            </div>
            <div class="form-group">
                <label asp-for="Qualification" class="control-label"></label>
                <input asp-for="Qualification" class="form-control" required  disabled />
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" required disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
