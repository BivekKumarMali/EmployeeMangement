@model LogInViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label"></label>
                    <input type="text" id="Email" asp-for="@Model.Email" class="form-control" autocomplete="off" required />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password" class="control-label"></label>
                    <input type="password" id="Password" asp-for="@Model.Password" class="form-control" autocomplete="off" required />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary"/>
                </div>
                <a value="forgetpassword" asp-controller="Home" asp-action="ForgetPassword">ForgetPassword</a>
            </form>
        </div>
    </div>
</div>
